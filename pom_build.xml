		<snapshotRepository>
			<!--id>snapshots</id-->
            <id>nexus</id>
            <name>Nexus Snapshot</name>
            <url>http://localhost:8081/nexus/content/repositories/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>

<!-- download artifacts from this repo -->
